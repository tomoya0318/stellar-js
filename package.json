{
  "name": "stellar-js",
  "version": "1.0.0",
  "description": "GitHub repository mining tool for data collection",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --pretty --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "check": "npm run lint && npm run type-check && npm run test",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": ["github", "mining", "repository", "data"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "drizzle-orm": "^0.29.0",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "drizzle-kit": "^0.20.7",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
