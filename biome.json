{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["**/node_modules/**"]
  },
  "files": {
    "ignore": [
      "**/package.json",
      "data/**",
      "drizzle/migrations/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/*.min.js",
      "coverage/**"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "quoteProperties": "asNeeded",
      "semicolons": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useHookAtTopLevel": "off",
        "noSwitchDeclarations": "off",
        "noUnnecessaryContinue": "off"
      },
      "style": {
        "useNodejsImportProtocol": "error",
        "noNonNullAssertion": "warn",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": "error"
      },
      "nursery": {
        "useConsistentCurlyBraces": "error",
        "noRestrictedImports": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "off",
        "noFallthroughSwitchClause": "off",
        "noConsoleLog": "warn",
        "noEmptyBlockStatements": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 20
          }
        },
        "noForEach": "off",
        "useOptionalChain": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      }
    }
  },
  "overrides": [
    {
      "include": ["**/*.test.ts", "**/*.spec.ts", "**/tests/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off",
            "noConsoleLog": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          }
        }
      }
    },
    {
      "include": ["drizzle/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "include": ["src/scripts/**", "src/index.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noFallthroughSwitchClause": "off",
            "noConsoleLog": "off"
          },
          "correctness": {
            "noUnnecessaryContinue": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": {
              "level": "warn",
              "options": {
                "maxAllowedComplexity": 30
              }
            }
          }
        }
      }
    }
  ]
}
